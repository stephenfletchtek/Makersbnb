  <body>

   <!-------------------     Navigation Bar            ------------->

  <nav class="navbar navbar-expand-md bg-light navbar-light">
      <div class="d-flex container-fluid justify-content-between">
        <a class="navbar-brand" href="/">
          <img
            src="https://drive.google.com/uc?export=view&id=1yKjePXHyNiM6WW9D3QVKNfXwWzaIH_s7"
            alt="Avatar Logo"
            style="width: 100px"
            class="rounded-circle"
          />
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="main-nav"
          aria-controls="main-nav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div
          class="collapse navbar-collapse justify-content-end align-center"
          id="main-nav"
        >
          <ul class="navbar-nav">
            <li class="nav-item ms-2 d-none d-md-inline">
              <a class="nav-link" href="#">Sign Up</a>
            </li>
            <li class="nav-item ms-2 d-none d-md-inline">
              <a class="nav-link" href="#">Log In</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <p></p>

         <!-------------------  listing Card        ------------->
    
 

<section class="d-flex justify-content-center align-items-center">
<div class="card mb-5 mt-5 mx-4" style="width: 50rem">
    <img src=<%=@listing['image_url']%> class="card-img-top" alt="photo of site"/>
    <div class="card-body">
      <h5 class="card-title"><%= @listing['name'] %></h5>
      <p class="card-text"><%= @listing['description'] %></p>
      <p class="card-text">Â£<%= @listing['price_per_night'] %> per night</p>
      <p class="card-text"><%= @listing['availability'] %></p>
      <a href="/bookings"><button type="submit" class="btn btn-danger">Book now</button></a>
      <a href="/listing/:id/add_dates"><button type="submit" class="btn btn-danger">Update the availability of this location</button></a>
      <br>
      <br>
        <a class="navbar-brand" href="/">
        <button type="button" class="btn btn-outline-danger mt-5"  >See all locations </button>
        </a>
    </div>
  </div>
</section>

  
   <!-- Latest compiled JavaScript -->
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

