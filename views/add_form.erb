<body>

 <section
      class="mb-5 d-flex justify-content-center align-items-center container-fluid px0"
    >
  <form action="/add" method="POST" class="">
    <div class="mb-3 mt-3 ">
      <label class="form-label">Name:</label>
      <input type="text" class="form-control" id="name" placeholder="Name of your place..." name="name" required>
    </div>
    <div class="mb-3 mt-3 ">
      <label class="form-label">Description:</label>
      <input type="text" class="form-control " id="description" placeholder="Description..." name="description" required>
    </div>
    <div class="mb-3 mt-3 ">
      <label class="form-label">Price per night:  </label>
      <input type="text" class="form-control" id="price_per_night" placeholder="Price per night..." name="price_per_night" required>
    </div>
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" value="true" name="availability">
      <label class="form-check-label" for="flexSwitchCheckDefault">Availability</label>
   </div> 
    <div class="mb-3 mt-3 ">
      <label class="form-label">Image URL:</label>
      <input type="text" class="form-control" id="image_url" placeholder="Image URL..." name="image_url" required>
    </div>
   
    <button type="submit" value="submit" class="btn btn-outline-danger">Submit</button>
  </form>

  </section>
